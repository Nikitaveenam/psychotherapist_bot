# EditorConfig помогает поддерживать единый стиль кодирования

root = true

# Настройки по умолчанию для всех файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Специальные настройки для Python файлов
[*.py]
max_line_length = 88
indent_style = space
indent_size = 4

# Специальные настройки для JSON, YAML и TOML файлов
[*.{json,yml,yaml,toml}]
indent_style = space
indent_size = 2
