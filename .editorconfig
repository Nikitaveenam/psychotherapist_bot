# Top-most config (stop searching in parent directories)
root = true

# Universal settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Python specific
[*.py]
max_line_length = 120
continuation_indent = 8  # For wrapped lines

# Markdown files
[*.md]
trim_trailing_whitespace = false  # Preserve trailing spaces for markdown syntax
insert_final_newline = true

# Web files (HTML/JS/TS)
[*.{html,js,ts}]
indent_size = 2
max_line_length = 120

# YAML configs
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab